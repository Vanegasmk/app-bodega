@{
    ViewBag.Title = "Home Page";
}

<div class="d-flex justify-content-between mt-5">
    <div class="card p-3 mx-1" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">
                Cantidad de productos registrados
            </h5>
            <p class="card-text">
                <h1>
                    <i class="fas fa-receipt"></i> @ViewBag.CantidadProductos
                </h1>
            </p>
        </div>
    </div>

    <div class="card p-3 mx-1" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">
                Cantidad de salidas registradas en el día
            </h5>
            <p class="card-text">
                <h1>
                    <i class="fas fa-glass-martini"></i> @ViewBag.CantidadSalidas
                </h1>
            </p>
        </div>
    </div>

    <div class="card p-3 mx-1" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">
                Cantidad de entrada registradas en el día
            </h5>
            <p class="card-text">
                <h1>
                    <i class="fas fa-sticky-note"></i> @ViewBag.CantidadEntradas
                </h1>
            </p>
        </div>
    </div>

    <div class="card p-3 mx-1" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">
                Nombre de productos bajos en stock
            </h5>
            <div class="overflow-auto" style="width: 200px; height: 100px; overflow-y: scroll;">
                <ul>
                    @foreach (var c in ViewBag.BajoStock)
                    {
                        <li>@c.Nombre</li>
                    }
                </ul> 
            </div>
        </div>
    </div>



</div>

