@model Infraestructure.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Login/_Login.cshtml";
}



@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()
    <br/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">

        <div class="form-floating">
            @Html.EditorFor(x => x.Correo, new { htmlAttributes = new { @class = "form-control", id = "floatingInput" } })
            <label for="floatingEmail">Correo</label>
            <div>
                <br />
                @Html.ValidationMessageFor(x => x.Correo, "", new { @class = "text-danger" })
            </div>


        </div>
    </div>


    <div class="form-group">
        
        <div class="form-floating">
            @Html.PasswordFor(x => x.Clave, new { @class = "form-control", id = "floatingPassword" })
            <label for="floatingEmail">Clave</label>
            <div>
                <br />
                @Html.ValidationMessageFor(x => x.Clave, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
   
    <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
    <div class="checkbox mb-3">
        <label>
            <span>
                <a>
                    <br />
                    @Html.ActionLink("Registrarse", "Create", "Login", null)
                </a>
            </span>
        </label>
    </div>

}


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/sweetalert");
}