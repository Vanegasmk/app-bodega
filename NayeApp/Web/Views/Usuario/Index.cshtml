@model IEnumerable<Infraestructure.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h2>Usuarios</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ubicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            
            <td>
                @if (item.Tipo == 0)
                {
                    <span class="badge bg-danger">
                        Sin Rol
                    </span>
                }
                else if (item.Tipo == 1)
                {
                    <span class="badge bg-success">
                        Administrador
                    </span>
                }
                else
                {
                    <span class="badge bg-primary">
                        Encargado
                    </span>
                }

            </td>
            <td>
                @if (item.Tipo == 0)
                {
                    @Html.ActionLink("Dar acceso", "Edit", new { id = item.Id}, new {@class = "btn btn-primary" }) <span>|</span>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) <span>|</span>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
                else if (item.Tipo == 1)
                {
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                }
                else if (item.Tipo == 2)
                {
                    @Html.ActionLink("Suspender cuenta", "Suspender", new { id = item.Id }, new { @class = "btn btn-primary" }) <span>|</span>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) <span>|</span>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>
    }

</table>