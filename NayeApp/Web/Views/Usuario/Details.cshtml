@model Infraestructure.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ubicacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ubicacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>

        <dd>
           @if (Model.Tipo == 0)
           {
               <span> Sin Rol</span>
           }
           else if (Model.Tipo == 1)
           {
               <span>Administrador</span>
           }
           else
           {
               <span>
                   Encargado
               </span>
           }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-primary" })
</p>
